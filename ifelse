#include <stdio.h>

int main(){
    int numero;

    printf("Digite um número inteiro:\n");
    scanf("%d", &numero);

    if (numero % 2) {
        printf("O número %d é impar\n", numero);
    }else{
        printf(" O número %d é par\n", numero);
    }

    return 0;
}
//Em C, qualquer valor diferente de zero é considerado verdadeiro, enquanto zero é considerado falso.

//Se numero for par → numero % 2 == 0 (FALSO) → Executa o else
//Se numero for ímpar → numero % 2 == 1 (VERDADEIRO) → Executa o if
