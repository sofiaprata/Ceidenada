#include <stdio.h>
#include <stdlib.h>

int main(){
    int x = 99, y = 10, soma;
    int *px, *py;
    

    px = &x;   // é diferente de *px = &x, pois nesse caso quando colocamos o * atribuimos ao valor de px o endereço de x. Quando não possui * dizemos que o ponteiro de x atribuiu o endereço de x.

    printf("Endereço de x: %d \n Valor de x: %d", px, *px);

    py = &y;   // é diferente de *px = &x, pois nesse caso quando colocamos o * atribuimos ao valor de px o endereço de x. Quando não possui * dizemos que o ponteiro de x atribuiu o endereço de x.

    printf("Endereco de y: %d \n Valor de y: %d", py, *py);

    soma = *px + *py;

    printf("A soma de x + y = %d \n", soma);


    return 0;
}
